<%= form_with model: @unit do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @unit.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :abbreviation %><br>
    <%= form.text_field :abbreviation %>
    <% @unit.errors.full_messages_for(:abbreviation).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
