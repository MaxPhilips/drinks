<%= form_with model: @ingredient_type do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @ingredient_type.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
