<h1>Drinks#index</h1>

<%= search_form_for @search, :remote=>"true", url: drinks_path, :method => :get do |f| %>
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>

  <%= f.submit %>
<% end %>

<table class="table table-striped table-hover table-borderless table-sm">
  <thead>
    <tr>
      <th>
        <%= sort_link @search, :name, 'Name', {}, { :remote => true, :method => :get } %>
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @drinks.each do |drink| %>
      <tr>
        <td><%= link_to drink.name, drink %></td>
        <td>
          <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="true">Operate</button>
          <ul class="dropdown-menu">
            <li><%= link_to 'Edit', edit_drink_path(drink), class: 'dropdown-item' %></li>
            <li><%= link_to 'Destroy', drink, method: :delete, data: { confirm: 'Are you sure?' }, class: 'dropdown-item' %></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @drinks, :theme => 'bootstrap-5'%>

<p><%= link_to 'New Drink', new_drink_path %></p>
