<%= form_with model: @drink do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @drink.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% @drink.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :preparation %><br>
    <%= form.text_area :preparation %>
    <% @drink.errors.full_messages_for(:preparation).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :service_id %><br>
    <%= form.collection_select :service_id, Service.all, :id, :name, include_blank: true %>
    <% @drink.errors.full_messages_for(:service_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :drinkware_id %><br>
    <%= form.collection_select :drinkware_id, Drinkware.all, :id, :name, include_blank: true %>
    <% @drink.errors.full_messages_for(:drinkware_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
