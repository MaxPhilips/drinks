<%= form_with model: @quantity do |form| %>
  <div>
    <%= form.label :amount %><br>
    <%= form.number_field :amount %>
    <% @quantity.errors.full_messages_for(:amount).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
